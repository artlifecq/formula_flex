<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100" mouseChildren="false" mouseEnabled="false" mouseFocusEnabled="false"
		 creationComplete="group1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import com.editor.story.event.StoryEvent;
			
			import mx.events.FlexEvent;
			
			import org.client.mainCore.manager.EventManager;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				EventManager.addEvent(StoryEvent.STORY_ACTION_TEXT_SHOW,showStoryText);
				EventManager.addEvent(StoryEvent.STORY_ACTION_TEXT_HIDE,hideStoryText);
			}
			
			private function showStoryText(text:String):void
			{
				storyLabel.text = text;
			}
			
			private function hideStoryText():void
			{
				storyLabel.text = "";
			}
		]]>
	</fx:Script>
	<s:Label id="storyLabel" width="100%" height="100%" textAlign="center" fontSize="24" fontFamily="Simsun" mouseEnabled="false">
		
	</s:Label>
</s:Group>
