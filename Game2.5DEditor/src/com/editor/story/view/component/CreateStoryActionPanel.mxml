<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="400" height="210"
		 creationComplete="titlewindow1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			[Bindable]
			public var datas:ArrayCollection = new ArrayCollection();
			
			protected function titlewindow1_creationCompleteHandler(event:FlexEvent):void
			{
				this.closeButton.visible = false;
			}
			
		]]>
	</fx:Script>
	<s:HGroup y="10" width="100%" horizontalAlign="center">
		<s:VGroup width="90%">
			<s:HGroup width="100%">
				<s:Label width="100" text="开始时间(毫秒)：">
					
				</s:Label>
				<s:TextInput width="100%" id="startTimeText">
					
				</s:TextInput>
			</s:HGroup>
			<s:HGroup width="100%">
				<s:Label width="100" text="持续时间(毫秒)：">
					
				</s:Label>
				<s:TextInput width="100%" id="totalTimeText">
					
				</s:TextInput>
			</s:HGroup>
			<s:HGroup width="100%">
				<s:Label width="100" text="行为：">
					
				</s:Label>
				<s:DropDownList id="actionTypeList" width="100%" dataProvider="{datas}" labelField="label" prompt="请选择"/>
			</s:HGroup>
			<s:HGroup width="100%" gap="0">
				<s:Label width="50" text="值：">
					
				</s:Label>
				<s:Button id="cameraUpdateBtn" width="50" height="100%" label="更新">
					
				</s:Button>
				<s:TextInput width="100%" id="valueText">
					
				</s:TextInput>
			</s:HGroup>
			<s:HGroup width="100%">
				<s:Label width="100" text="描述：">
					
				</s:Label>
				<s:TextInput width="100%" id="descText">
					
				</s:TextInput>
			</s:HGroup>
			<s:HGroup horizontalAlign="center" width="100%">
				<s:Button id="btn_sure" label="确定">
					
				</s:Button>
				<s:Button id="btn_cancel" label="取消">
					
				</s:Button>
			</s:HGroup>
		</s:VGroup>
	</s:HGroup>
</s:TitleWindow>
