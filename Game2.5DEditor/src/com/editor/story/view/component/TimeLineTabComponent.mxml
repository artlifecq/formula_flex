<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100" height="21" >
	<fx:Script>
		<![CDATA[
			
			private var _tabID:int;
			/** 文本 **/
			[Bindable]
			private var _txt:String;
			/**
			 * 创建标签
			 * @author 杨剑明	  2015-11-24
			 */
			public function createTab(tabID:int, txt:String):void
			{
				_tabID = tabID;
				_txt = txt;
			}
			
			
			/**
			 * @author 杨剑明	  2015-11-24
			 */
			public function get tabID():int
			{
				return _tabID;
			}
			
		]]>
	</fx:Script>
	<s:Rect width="100%" height="100%">
		<s:stroke>
			<s:SolidColorStroke color="0x262626" weight="0.1" alpha="0.5"/>
		</s:stroke>
		
		<s:fill>
			<s:SolidColor color="0xFFFFFF" alpha="0.2">
			</s:SolidColor>
		</s:fill>
	</s:Rect>
	<s:Label id="txt" width="100%" height="100%" text="{_txt}" textAlign="center" color="0xFFFFFF" verticalAlign="middle">
	</s:Label>
</s:Group>
