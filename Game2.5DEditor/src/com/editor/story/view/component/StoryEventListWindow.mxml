<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   width="280" height="500"
			   title="剧情事件列表"
			   fontFamily="SimSun" xmlns:component="com.editor.story.view.component.*">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			[Bindable]
			/** 配置数据 **/
			public var datas : ArrayCollection = new ArrayCollection();
		]]>
	</fx:Script>
	<s:HGroup height="30" verticalAlign="middle" gap="5">
		<s:Button label="添加事件"
				  id="btn_add"/>
		<s:Button label="编辑事件"
				  id="btn_edit"/>
		<s:Button label="删除事件"
				  id="btn_del"/>
	</s:HGroup>
	<mx:DataGrid id="data_grid"
				 x="0"
				 y="30"
				 width="100%"
				 height="100%"
				 dataProvider="{datas}"
				 editable="false">
		<mx:columns>
			<mx:DataGridColumn headerText="ID"
							   dataField="id"
							   width="30"/>
			<mx:DataGridColumn headerText="触发类型"
							   dataField="type"
							   width="70"/>
			<mx:DataGridColumn headerText="值"
							   dataField="value"
							   width="50"/>
			<mx:DataGridColumn headerText="描述"
							   dataField="desc"/>
		</mx:columns>
	</mx:DataGrid>
</s:TitleWindow>
